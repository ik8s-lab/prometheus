apiVersion: apps/v1
kind: Deployment
metadata:
  name: sqlserver
spec:
  selector:
    matchLabels:
      app: sqlserver
  replicas: 1
  template:
    metadata:
     labels:
       app: sqlserver
    spec:
      containers:
      - name: sqlserver
        image: docker pull mcr.microsoft.com/mssql/server:2017-CU19-ubuntu-16.04
        volumeMounts:
        - name: sqlserver-volume
          mountPath: /var/opt/mssql
      volumes:
      - name: sqlserver-volume
        nfs:
          path: /home/nfs-share/pv-50g-001
          server: 10.0.33.201
